<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/launcher_main_background">


    <ImageView
        android:id="@+id/launcherMainTitleIcon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/launcher_main_icon_bank"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/launcherMainTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="70dp"
        android:text="@string/bankName"
        android:fontFamily="@font/helvetica_light"
        android:textSize="30sp"
        android:textColor="#9B59B6" />



</RelativeLayout>